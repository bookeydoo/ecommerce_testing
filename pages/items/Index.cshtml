@model Ecommerce.pages.items.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.General_item_layout[0].DB_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.General_item_layout[0].Dateofproduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.General_item_layout[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.General_item_layout[0].rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.General_item_layout) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DB_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateofproduction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
